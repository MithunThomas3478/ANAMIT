<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice - <%= invoiceNumber %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            color: #333;
        }
        .invoice-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .invoice-header {
            border-bottom: 2px solid #6d28d9;
            padding-bottom: 1rem;
            margin-bottom: 2rem;
        }
        .company-details {
            text-align: right;
        }
        .invoice-items {
            margin: 2rem 0;
        }
        .total-section {
            border-top: 2px solid #6d28d9;
            padding-top: 1rem;
            margin-top: 2rem;
        }
        @media print {
            .no-print {
                display: none;
            }
            body {
                print-color-adjust: exact;
                -webkit-print-color-adjust: exact;
            }
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="invoice-header">
            <div class="row">
                <div class="col-6">
                    <h1 class="text-primary">ANAMIT</h1>
                    <p>123 Business Street<br>
                    City, State 12345<br>
                    Phone: (123) 456-7890<br>
                    Email: support@anamit.com</p>
                </div>
                <div class="col-6 company-details">
                    <h2 class="text-secondary">INVOICE</h2>
                    <p><strong>Invoice Number:</strong> <%= invoiceNumber %><br>
                    <strong>Date:</strong> <%= date %><br>
                    <strong>Order Number:</strong> #<%= order.orderNumber %></p>
                </div>
            </div>
        </div>

        <div class="customer-details">
            <h4>Bill To:</h4>
            <p><strong><%= order.user.firstName %> <%= order.user.lastName %></strong><br>
            Email: <%= order.user.email %><br>
            <% if (order.user.address) { %>
                Address: <%= order.user.address %><br>
            <% } %>
            </p>
        </div>

        <div class="invoice-items">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-end">Price</th>
                        <th class="text-end">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% order.items.forEach(item => { %>
                        <tr>
                            <td><%= item.product.name %></td>
                            <td class="text-center"><%= item.quantity %></td>
                            <td class="text-end">₹<%= item.price.toFixed(2) %></td>
                            <td class="text-end">₹<%= (item.price * item.quantity).toFixed(2) %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <div class="total-section">
            <div class="row">
                <div class="col-6"></div>
                <div class="col-6">
                    <table class="table table-borderless">
                        <tr>
                            <td><strong>Subtotal:</strong></td>
                            <td class="text-end">₹<%= order.totalAmount.toFixed(2) %></td>
                        </tr>
                        <% if (order.discount) { %>
                            <tr>
                                <td><strong>Discount:</strong></td>
                                <td class="text-end">₹<%= order.discount.toFixed(2) %></td>
                            </tr>
                        <% } %>
                        <tr>
                            <td><strong>Total:</strong></td>
                            <td class="text-end"><strong>₹<%= order.totalAmount.toFixed(2) %></strong></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-4 text-center">
            <p class="text-muted">Thank you for your business!</p>
        </div>

        <div class="mt-4 text-center no-print">
            <button onclick="window.print()" class="btn btn-primary">Print Invoice</button>
            <button onclick="window.close()" class="btn btn-secondary ms-2">Close</button>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
