<script>

document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const searchResults = document.getElementById('searchResults');
    let searchTimeout;

    // Search input handler
    searchInput.addEventListener('input', function(e) {
        // Clear previous timeout
        if (searchTimeout) {
            clearTimeout(searchTimeout);
        }

        const query = e.target.value.trim();
        
        // Clear results if query is empty
        if (!query) {
            searchResults.style.display = 'none';
            return;
        }

        // Add loading state
        searchResults.innerHTML = '<div class="search-loading">Searching...</div>';
        searchResults.style.display = 'block';

        // Debounce search
        searchTimeout = setTimeout(() => performSearch(query), 300);
    });

    // Close search results when clicking outside
    document.addEventListener('click', function(e) {
        if (!searchResults.contains(e.target) && e.target !== searchInput) {
            searchResults.style.display = 'none';
        }
    });
});

async function performSearch(query) {
    try {
        console.log('Performing search for:', query); // Debug log

        const response = await fetch(`/api/search?q=${encodeURIComponent(query)}`);
        const data = await response.json();

        console.log('Search response:', data); // Debug log

        if (data.success) {
            displaySearchResults(data.products, data.categories);
        } else {
            console.error('Search failed:', data.error);
            displayError('Search failed. Please try again.');
        }
    } catch (error) {
        console.error('Search error:', error);
        displayError('An error occurred. Please try again.');
    }
}

function displaySearchResults(products, categories) {
    const searchResults = document.getElementById('searchResults');
    
    if (!products.length && !categories.length) {
        searchResults.innerHTML = `
            <div class="search-no-results">
                <i class="bi bi-search mb-2"></i>
                <p>No results found</p>
            </div>
        `;
        return;
    }

    let resultsHTML = '';

    // Add categories section if categories exist
    if (categories.length > 0) {
        resultsHTML += `
            <div class="search-section">
                <div class="search-section-title">Categories</div>
                ${categories.map(category => `
                    <a href="/category/${category.slug}" class="search-result-item">
                        <div class="search-result-info">
                            <div class="search-result-name">${category.name}</div>
                            ${category.categoryOffer > 0 ? 
                                `<div class="search-result-offer">${category.categoryOffer}% OFF</div>` 
                                : ''
                            }
                        </div>
                    </a>
                `).join('')}
            </div>
        `;
    }

    // Add products section if products exist
    if (products.length > 0) {
        resultsHTML += `
            <div class="search-section">
                <div class="search-section-title">Products</div>
                ${products.map(product => `
                    <a href="/productDetails/${product._id}" class="search-result-item">
                        <img src="${product.imageUrl}" 
                             alt="${product.productName}" 
                             class="search-result-image"
                             onerror="this.src='/placeholder.jpg'">
                        <div class="search-result-info">
                            <div class="search-result-name">${product.productName}</div>
                            <div class="search-result-category">${product.category.name}</div>
                            <div class="search-result-price">
                                <span class="current-price">₹${product.price.toFixed(2)}</span>
                                ${product.productOffer > 0 ? 
                                    `<span class="original-price">₹${product.originalPrice.toFixed(2)}</span>` 
                                    : ''
                                }
                            </div>
                        </div>
                    </a>
                `).join('')}
            </div>
        `;
    }

    searchResults.innerHTML = resultsHTML;
    searchResults.style.display = 'block';
}

function displayError(message) {
    const searchResults = document.getElementById('searchResults');
    searchResults.innerHTML = `
        <div class="search-error">
            <i class="bi bi-exclamation-circle"></i>
            <p>${message}</p>
        </div>
    `;
    searchResults.style.display = 'block';
}
