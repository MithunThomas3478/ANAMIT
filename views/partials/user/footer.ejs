<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ANAMIT - Footer Example</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            margin: 0;
        }
        
        .content {
            flex: 1 0 auto;
        }
        
        .footer {
            flex-shrink: 0;
            background: linear-gradient(145deg, #2e5174, #78b3ee);
            padding: 80px 0 30px;
            color: #ecf0f1;
            width: 100%;
            margin-top: auto;
            position: relative;
            overflow: hidden;
        }
        
        .footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, #3498db, #2ecc71, #e74c3c);
        }
        
        .footer .containers {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        
        .footer h5 {
            font-weight: 700;
            margin-bottom: 30px;
            color: #fff;
            position: relative;
            padding-bottom: 15px;
            font-size: 1.4rem;
            letter-spacing: 0.5px;
            text-transform: uppercase;
        }
        
        .footer h5::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: 0;
            width: 40px;
            height: 3px;
            background: #3498db;
            transition: width 0.3s ease;
        }
        
        .footer .col-md-3:hover h5::after {
            width: 60px;
        }
        
        .footer ul {
            padding: 0;
            margin: 0;
        }
        
        .footer ul li {
            margin-bottom: 16px;
            transition: transform 0.3s ease;
            list-style: none;
        }
        
        .footer ul li:hover {
            transform: translateX(8px);
        }
        
        .footer a {
            color: #bdc3c7;
            text-decoration: none;
            font-size: 1.05rem;
            transition: all 0.3s ease;
            position: relative;
            display: inline-block;
            padding: 2px 0;
            font-weight: 400;
            letter-spacing: 0.3px;
        }
        
        .footer a:hover {
            color: #3498db;
        }
        
        .footer a::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -2px;
            left: 0;
            background-color: #3498db;
            transition: width 0.3s ease;
        }
        
        .footer a:hover::after {
            width: 100%;
        }
        
        .social-icons {
            display: flex;
            gap: 25px;
            margin-top: 20px;
        }
        
        .social-icons a {
            color: #ecf0f1;
            font-size: 28px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
        }
        
        .social-icons a:hover {
            color: #fff;
            transform: translateY(-5px);
            background: #3498db;
            box-shadow: 0 8px 20px rgba(52, 152, 219, 0.4);
        }
        
        .copyright {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: 60px;
            padding-top: 25px;
            text-align: center;
            font-size: 1rem;
            color: #bdc3c7;
            letter-spacing: 0.5px;
        }

        @media (max-width: 768px) {
            .footer {
                padding: 50px 0 30px;
            }
            
            .footer h5 {
                margin-bottom: 25px;
                text-align: left;
                font-size: 1.3rem;
            }
            
            .footer .row > div {
                margin-bottom: 40px;
                text-align: left;
            }
            
            .footer a {
                font-size: 1rem;
            }
            
            .footer .social-icons {
                justify-content: flex-start;
                margin-top: 20px;
                gap: 20px;
            }
            
            .social-icons a {
                width: 45px;
                height: 45px;
                font-size: 24px;
            }
            
            .footer h5::after {
                left: 0;
                transform: none;
            }
            
            .copyright {
                margin-top: 40px;
                padding-top: 20px;
                font-size: 0.9rem;
            }
        }

        @media (max-width: 576px) {
            .footer {
                padding: 40px 0 20px;
            }
            
            .footer h5 {
                font-size: 1.2rem;
                margin-bottom: 20px;
            }
            
            .footer a {
                font-size: 0.95rem;
            }
            
            .social-icons a {
                width: 40px;
                height: 40px;
                font-size: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="content">
        <!-- Your page content goes here -->
    </div>

    <footer class="footer">
        <div class="containers">
            <div class="row gy-4">
                <div class="col-md-3 col-sm-6">
                    <h5>Need Help</h5>
                    <ul class="list-unstyled">
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>Contact Us</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>Track Order</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>Returns & Exchange</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>FAQs</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>Career</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6">
                    <h5>Company</h5>
                    <ul class="list-unstyled">
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>About Us</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>ANAMIT Blog</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>Collaboration</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>Media</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6">
                    <h5>More Info</h5>
                    <ul class="list-unstyled">
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>Terms & Conditions</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>Privacy Policy</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>Shipping Policy</a></li>
                        <li><a href="#"><i class="bi bi-chevron-right me-2"></i>Sitemap</a></li>
                    </ul>
                </div>
                <div class="col-md-3 col-sm-6">
                    <h5>Connect With Us</h5>
                    <div class="social-icons">
                        <a href="#" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                        <a href="#" aria-label="Twitter"><i class="bi bi-twitter"></i></a>
                        <a href="#" aria-label="YouTube"><i class="bi bi-youtube"></i></a>
                    </div>
                </div>
            </div>
            <div class="copyright">
                Copyright &copy; <%= new Date().getFullYear() %> Anamit Folks Pvt Ltd. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script>
 window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Profile dropdown functionality
        function toggleDropdown() {
            const dropdown = document.getElementById('dropdown');
            if (dropdown.style.display === 'none' || dropdown.style.display === '') {
                dropdown.style.display = 'block';
            } else {
                dropdown.style.display = 'none';
            }
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('dropdown');
            const profileIcon = document.querySelector('.bi-person-circle');
            
            if (dropdown && !event.target.closest('.icons') && event.target !== profileIcon) {
                dropdown.style.display = 'none';
            }
        });

        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const searchResults = document.getElementById('searchResults');
        let searchTimeout;

        if (searchInput) {
            searchInput.addEventListener('input', function(e) {
                if (searchTimeout) {
                    clearTimeout(searchTimeout);
                }

                const query = e.target.value.trim();
                
                if (!query) {
                    searchResults.style.display = 'none';
                    return;
                }

                searchResults.innerHTML = '<div class="search-loading"><i class="bi bi-hourglass"></i><p>Searching...</p></div>';
                searchResults.style.display = 'block';

                searchTimeout = setTimeout(() => {
                    fetch(`/api/search?q=${encodeURIComponent(query)}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                let resultsHTML = '';

                                if (data.categories.length > 0) {
                                    resultsHTML += `
                                        <div class="search-section">
                                            <div class="search-section-title">Categories</div>
                                            ${data.categories.map(category => `
                                                <a href="/category/${category.slug}" class="search-result-item">
                                                    <div class="search-result-info">
                                                        <div class="search-result-name">${category.name}</div>
                                                        ${category.categoryOffer > 0 ? 
                                                            `<div class="search-result-offer">${category.categoryOffer}% OFF</div>` 
                                                            : ''
                                                        }
                                                    </div>
                                                </a>
                                            `).join('')}
                                        </div>
                                    `;
                                }

                                if (data.products.length > 0) {
                                    resultsHTML += `
                                        <div class="search-section">
                                            <div class="search-section-title">Products</div>
                                            ${data.products.map(product => `
                                                <a href="/productDetails/${product._id}" class="search-result-item">
                                                    <img src="${product.imageUrl}" 
                                                         alt="${product.productName}" 
                                                         class="search-result-image"
                                                         onerror="this.src='/placeholder.jpg'">
                                                    <div class="search-result-info">
                                                        <div class="search-result-name">${product.productName}</div>
                                                        <div class="search-result-category">${product.category.name}</div>
                                                        <div class="search-result-price">₹${product.price.toFixed(2)}</div>
                                                    </div>
                                                </a>
                                            `).join('')}
                                        </div>
                                    `;
                                }

                                if (!data.products.length && !data.categories.length) {
                                    resultsHTML = `
                                        <div class="search-no-results">
                                            <i class="bi bi-search"></i>
                                            <p>No results found</p>
                                        </div>
                                    `;
                                }

                                searchResults.innerHTML = resultsHTML;
                            }
                        })
                        .catch(error => {
                            console.error('Search error:', error);
                            searchResults.innerHTML = `
                                <div class="search-error">
                                    <i class="bi bi-exclamation-circle"></i>
                                    <p>An error occurred. Please try again.</p>
                                </div>
                            `;
                        });
                }, 300);
            });

            // Close search results when clicking outside
            document.addEventListener('click', function(e) {
                if (!searchResults.contains(e.target) && e.target !== searchInput) {
                    searchResults.style.display = 'none';
                }
            });

            // Handle keyboard navigation in search results
            searchInput.addEventListener('keydown', function(e) {
                const results = searchResults.querySelectorAll('.search-result-item');
                const currentIndex = Array.from(results).findIndex(result => result === document.activeElement);

                switch (e.key) {
                    case 'ArrowDown':
                        e.preventDefault();
                        if (currentIndex < results.length - 1) {
                            results[currentIndex + 1].focus();
                        } else {
                            results[0].focus();
                        }
                        break;
                    case 'ArrowUp':
                        e.preventDefault();
                        if (currentIndex > 0) {
                            results[currentIndex - 1].focus();
                        } else {
                            results[results.length - 1].focus();
                        }
                        break;
                    case 'Escape':
                        searchResults.style.display = 'none';
                        searchInput.blur();
                        break;
                }
            });
        }

        // Close all dropdowns/search when pressing Escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                const dropdown = document.getElementById('dropdown');
                if (dropdown) {
                    dropdown.style.display = 'none';
                }
                if (searchResults) {
                    searchResults.style.display = 'none';
                }
            }
        });

        // Handle mobile menu toggle
        const menuToggle = document.createElement('button');
        menuToggle.className = 'menu-toggle';
        menuToggle.innerHTML = '<i class="bi bi-list"></i>';
        
        const navbar = document.querySelector('.navbar');
        const navItem = document.querySelector('.nav-item');
        
        if (window.innerWidth <= 768) {
            navbar.insertBefore(menuToggle, navbar.firstChild);
            
            menuToggle.addEventListener('click', function() {
                navItem.style.display = navItem.style.display === 'flex' ? 'none' : 'flex';
            });
        }

        // Update layout on window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth <= 768) {
                if (!document.querySelector('.menu-toggle')) {
                    navbar.insertBefore(menuToggle, navbar.firstChild);
                }
                navItem.style.display = 'none';
            } else {
                const toggle = document.querySelector('.menu-toggle');
                if (toggle) {
                    toggle.remove();
                }
                navItem.style.display = 'flex';
            }
        });
</script>

</body>
</html>