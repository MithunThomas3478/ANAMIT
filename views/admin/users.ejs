<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
    }
    table th, table td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    table th {
      background-color: #f4f4f4;
    }
    button {
      padding: 5px 10px;
      cursor: pointer;
    }
    .block-btn {
      background-color: red;
      color: white;
      border: none;
    }
    .unblock-btn {
      background-color: green;
      color: white;
      border: none;
    }
    main {
     /* width: 75%; */
     padding: 6rem;
    }
    
   
  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 20px 0;
    list-style: none;
    padding: 0;
    background-color: #f5f5f5;
  }

  .pagination li {
    margin: 0 5px;
  }

  .pagination .page-link {
    display: inline-block;
    padding: 10px 15px;
    font-size: 14px;
    color: #ff9000;
    text-decoration: none;
    border: 1px solid #ddd;
    border-radius: 5px;
    transition: all 0.3s;
  }

  .pagination .page-link:hover {
    background-color: #ff4d00;
    color: #fff;
    text-decoration: none;
  }

  .pagination .page-item.active .page-link {
    background-color: #ffa500;
    color: #fff;
    border-color: #ff9000;
  }

  .pagination .page-item.disabled .page-link {
    color: #ccc;
    pointer-events: none;
    background-color: #f8f9fa;
  }
  
  /* CSS for the toggle switch */
  .switch {
    position: relative;
    display: inline-block;
    width: 50px;
    height: 25px;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: red;
    transition: 0.4s;
    border-radius: 25px;
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 18px;
    width: 18px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    transition: 0.4s;
    border-radius: 50%;
  }

  input:checked + .slider {
    background-color: green;
  }

  input:checked + .slider:before {
    transform: translateX(24px);
  }


  


  </style>
</head>
<body>
  <%-include("../../views/partials/admin/header")%>
  <main>
    <h1>User Management</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.isBlocked ? "Blocked" : "Active" %></td>
            <td>
              <label class="switch">
                <input 
                  type="checkbox" 
                  class="toggle-block" 
                  data-user-id="<%= user._id %>" 
                  <%= user.isBlocked ? "checked" : "" %> 
                />
                <span class="slider round"></span>
              </label>
            </td>           
          </tr>
        <% }) %>
      </tbody>
    </table>
    
  <nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
      <% if (currentPage > 1) { %>
        <li class="page-item">
          <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
        </li>
      <% } else { %>
        <li class="page-item disabled">
          <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
        </li>
      <% } %>
  
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %>"><%= i %></a>
        </li>
      <% } %>
  
      <% if (currentPage < totalPages) { %>
        <li class="page-item">
          <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
        </li>
      <% } else { %>
        <li class="page-item disabled">
          <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Next</a>
        </li>
      <% } %>
    </ul>
  </nav>
  
  
  </main>
  <%-include("../../views/partials/admin/footer")%>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
  const toggles = document.querySelectorAll(".toggle-block");

  toggles.forEach((toggle) => {
    toggle.addEventListener("change", async function () {
      const userId = this.dataset.userId;
      const isChecked = this.checked;
      const url = `/admin/users/toggle-block/${userId}`;
      
      // Get the status cell (TD element) that's two siblings before the action TD
      const statusCell = this.closest('tr').querySelector('td:nth-child(3)');

      try {
        const response = await fetch(url, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ status: isChecked ? "true" : "false" }),
        });

        if (response.ok) {
          const result = await response.json();
          // Update the status text immediately
          statusCell.textContent = isChecked ? "Blocked" : "Active";
          console.log(`User ${result.status === "true" ? "blocked" : "unblocked"}`);
        } else {
          console.error("Failed to toggle block/unblock");
          // Revert the toggle if the backend fails
          this.checked = !isChecked;
          statusCell.textContent = !isChecked ? "Blocked" : "Active";
        }
      } catch (error) {
        console.error("Error:", error);
        // Revert the toggle if there's an error
        this.checked = !isChecked;
        statusCell.textContent = !isChecked ? "Blocked" : "Active";
      }
    });
  });
});
  </script>
  
  
</body>

</html>
